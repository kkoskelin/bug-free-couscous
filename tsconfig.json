{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "target": "es2021",
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
    }
  },
  "typeAcquisition": {
    "enable": true
  }
}
